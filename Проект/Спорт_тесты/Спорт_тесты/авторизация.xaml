<Window x:Class="Спорт_тесты.авторизация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Спорт_тесты"        
        Title="Авторизация"
        Height="500"
        Width="550"
        Background="#FFFAFAFA"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Century Gothic"
    FontSize="14"
        Icon="Assets/иконка.ico">
   
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Вход в систему"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Поле логина -->
            <TextBlock Text="Логин:" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox"
                     Height="35"
                     BorderBrush="#DDD"
                     Background="#FFF"
                     BorderThickness="1"
                     Margin="0,0,0,15"
                     VerticalContentAlignment="Center">
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.2" Direction="270"/>
                </TextBox.Effect>
            </TextBox>

            <!-- Поле пароля -->
            <TextBlock Text="Пароль:" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="35"
                         BorderBrush="#DDD"
                         Background="#FFF"
                         BorderThickness="1"
                         Margin="0,0,0,20"
                         VerticalContentAlignment="Center">
                <PasswordBox.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.2" Direction="270"/>
                </PasswordBox.Effect>
            </PasswordBox>

            <!-- Кнопка входа -->
            <Button Content="Войти"
                    Height="35"
                    Background="#11b0e5"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,0,15"
                    Click="LoginButton_Click">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Button.Effect>
            </Button>

            <!-- Гиперссылка для регистрации -->
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink Click="Registration_Click" 
                           Foreground="#11b0e5"
                           FontSize="14">
                    Регистрация
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Нижний текст -->
        <TextBlock Grid.Row="1"
                   Text="© 2025 Приложение"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Foreground="Gray"
                   Margin="0,20,0,0"/>
    </Grid>
</Window>