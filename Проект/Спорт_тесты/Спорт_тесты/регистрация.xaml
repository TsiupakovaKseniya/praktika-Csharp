<Window x:Class="Спорт_тесты.регистрация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="600"
        Width="550"
        Background="#FFFAFAFA"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Century Gothic"
        Icon="Assets/иконка.ico">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Регистрация"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Поле для имени с подписью и placeholder -->
            <TextBlock Text="Имя:" 
                       FontSize="14"
                       Margin="0,5,0,2"/>
            <Grid>
                <TextBox x:Name="NameBox"
                         Height="35"
                         FontSize="14"
                         Padding="0"
                         BorderBrush="#DDD"
                         Background="#FFF"
                         BorderThickness="1"
                         Margin="0,0,0,0"
                         VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Поле для email с подписью и placeholder -->
            <TextBlock Text="Логин:" 
                       FontSize="14"
                       Margin="0,5,0,2"/>
            <Grid>
                <TextBox x:Name="loginBox"
                         Height="35"
                         FontSize="14"
                         Padding="0"
                         BorderBrush="#DDD"
                         Background="#FFF"
                         BorderThickness="1"
                         Margin="0,0,0,0"
                         VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Поле для пароля с подписью и placeholder -->
            <TextBlock Text="Пароль:" 
                       FontSize="14"
                       Margin="0,5,0,2"/>
            <Grid>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             FontSize="14"
                             Padding="0"
                             BorderBrush="#DDD"
                             Background="#FFF"
                             BorderThickness="1"
                             Margin="0,0,0,0"
                             VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Поле для подтверждения пароля с подписью и placeholder -->
            <TextBlock Text="Подтверждение пароля:" 
                       FontSize="14"
                       Margin="0,5,0,2"/>
            <Grid>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="35"
                             FontSize="14"
                             Padding="0"
                             BorderBrush="#DDD"
                             Background="#FFF"
                             BorderThickness="1"
                             Margin="0,0,0,10"
                             VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться"
                    Height="35"
                    FontSize="14"
                    Background="#11b0e5"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,15,0,10"
                    Click="RegisterButton_Click"/>

            <!-- Гиперссылка для возврата к авторизации -->
            <TextBlock HorizontalAlignment="Center">
                <Hyperlink Click="BackToLogin_Click" 
                           Foreground="#11b0e5" 
                           FontSize="14">
                    Вернуться к авторизации
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="© 2025 Приложение"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="12"
                   Foreground="Gray"
                   Margin="0,20,0,0"/>
    </Grid>
</Window>
